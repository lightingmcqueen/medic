<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Clinic</th>
      <th>Recipientid</th>
      <th>Senderid</th>
      <th>Procedure</th>
      <th>Subject</th>
      <th>Travel date</th>
      <th>Required treatment</th>
      <th>Message</th>
      <th>Message read date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.clinic_id %></td>
        <td><%= message.recipientid %></td>
        <td><%= message.senderid %></td>
        <td><%= message.procedure_id %></td>
        <td><%= message.subject %></td>
        <td><%= message.travel_date %></td>
        <td><%= message.required_treatment %></td>
        <td><%= message.message %></td>
        <td><%= message.message_read_date %></td>
        <td><%= message.status %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

